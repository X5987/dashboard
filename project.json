{
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "name": "dashboard_cv",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "options": {
        "outputPath": "dist/dashboard_cv",
        "index": "src/index.html",
        "browser": "src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          }
        ],
        "styles": [
          "@angular/material/prebuilt-themes/azure-blue.css",
          "src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kB",
              "maximumError": "4kB"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "dashboard_cv:build:production"
        },
        "development": {
          "buildTarget": "dashboard_cv:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n"
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "src/**/*.ts",
          "src/**/*.html"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "tags": ["type:application", "scope:dashboard"],
  "projects": {
    "design_system": {
      "root": "design-system",
      "sourceRoot": "design-system/src",
      "projectType": "library",

      "tags": ["type:library", "scope:ui"],
      "targets": {
        "build": {
          "executor": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "design-system/ng-package.json",
            "styles": ["design-system/src/styles/core-styles.scss"]
          }
        }
      }
    },
    "form_projet": {
      "root": "apps/form_projet",
      "sourceRoot": "apps/form_projet/src",
      "projectType": "library",
      "tags": ["type:application", "scope:form"],
      "targets": {
        "build": {
          "executor": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "outputPath": "dist/form_projet",
            "index": "apps/form_projet/src/index.html",
            "main": "apps/form_projet/src/main.ts",
            "tsConfig": "apps/form_projet/tsconfig.app.json",
            "scripts": [],
            "project": "apps/form_projet/ng-package.json",
            "styles": ["design-system/src/styles/core-styles.scss", "apps/form_projet/src/styles.scss"]
          }
        },
        "test": {
          "executor": "@nx/jest:jest",
          "options": {
            "jestConfig": "apps/form_projet/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "presentation_projet": {
      "root": "apps/presentation_projet",
      "sourceRoot": "apps/presentation_projet/src",
      "projectType": "library",
      "targets": {
        "build": {
          "executor": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "apps/presentation_projet/ng-package.json",
            "styles": ["design-system/src/styles/core-styles.scss", "apps/presentation_projet/src/styles.scss"]
          }
        },
        "test": {
          "executor": "@nx/jest:jest",
          "options": {
            "jestConfig": "apps/presentation_projet/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
